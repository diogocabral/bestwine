    <%= f.label :vivino_score %><br>
    <%= f.text_field :vivino_score %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :invoice %><br>
    <%= f.text_field :invoice %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class => 'btn btn-default' %>
