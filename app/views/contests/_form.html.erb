<%= form_for @contest, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>
  <% if @contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contest.errors.count, "error") %> prohibited this contest from being saved:</h2>

      <ul>
      <% @contest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %> 
  </div>
  <div class="form-group">
    <%= f.label :starts_in %>
    <div class="input-group date" id="datetimepicker">
      <%= f.text_field :starts_in, :class => 'form-control', :value => "#{f.object.starts_in.strftime("%d/%m/%Y %H:%M") unless f.object.new_record?}" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <%= f.submit 'Save', :class => 'btn btn-default' %>
  <%= link_to 'Back', contests_path, :class => 'btn btn-default' %>

<% end %>

<script type="text/javascript">
    $(function () {
        $('.date').datetimepicker({
          allowInputToggle: true
        });
    });
</script>